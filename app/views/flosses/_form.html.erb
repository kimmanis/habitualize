<%= form_for(@floss) do |f| %>
  <% if @floss.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@floss.errors.count, "error") %> prohibited this floss from being saved:</h2>

      <ul>
      <% @floss.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <% #f.number_field :user %>
    <%= f.hidden_field :user %>
    <%= image_tag current_user.image %>
  </div>
  <div class="actions">
    <%= f.submit "Yes! I flossed!", :class=>"button" %>
  </div>
<% end %>
<%= form_for(@user) do |g| %>
  <%= g.select(:next_reminder, options_for_select([['1 hour', Time.now.to_datetime+1.hours], ['2 hours', Time.now.to_datetime+2.hours], ['3 hours', Time.now.to_datetime+3.hours], ['4 hours', Time.now.to_datetime+4.hours]])) %>
  <br />
  <%= g.submit "Snooze", :class=>"button" %>
<% end %>
<%= form_for(@floss) do |n| %>
  <%= n.hidden_field :user %>
  <%= n.hidden_field :skipped, :value=>"1" %>
  <%= n.submit "Skip today", :class=>"button" %>
<% end %>

