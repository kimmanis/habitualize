<% if @floss.skipped == 1 %>
<p>
Really? You aren't going to floss??
</p>

<% else %>
<div class="hero">
  <div class="row">
    <div class="large-2 small-4 columns">
    	<%= image_tag current_user.image, :class=>"profile-picture", :size=>"80x80" %>
    </div>
    <div class="large-6 small-8 end scolumns">
      <p class="name">You did it <%= @user.first_name %>! Keep on flossing!</p>
    </div>
  </div><br />
</div>
<% end %>

<!-- <%= link_to 'Back', root_path, :class=>"button" %> -->

</br>

<% User.all.each do |user| %>
  <div class="row status">
    <div class="large-3 small-2 columns">
      <%= image_tag user.image, :class=>"pic-small" %>
    </div>
    <div class="large-6 small-6 columns">
      <p class="status-text"><%= user.name %></p>
    </div>
    <div class="large-3 small-3 columns">
      <p class="status-text"><%= Floss.where('user = ?', user.id).count %></p>
    </div>
  </div>
  <% end %>