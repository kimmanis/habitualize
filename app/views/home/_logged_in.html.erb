<div class="hero">
  <div class="row">
    <div class="large-2 small-4 columns">
    	<%= image_tag current_user.image, :class=>"profile-picture", :size=>"80x80" %>
      
    </div>
    <div class="large-6 small-8 end scolumns">
      <p class="name"><%= current_user.name %></p>
      <p>Daily reminder time: <%= current_user.reminder_time.to_s(:reminder_time) %></p>
    </div>
  </div><br />
  <div class="row">
    <div class="large-12 columns">
      <p class="center"><a href="#" data-reveal-id="myModal" class="button checkin">Did you floss?</a></p>
    </div>
  </div>
</div>
  <br />

<!-- today -->
<% if @floss_today %>
<% if @floss_today.skipped == 1 %>
  <div class="row status">
    <div class="large-3 small-3 columns">
      <img src="assets/x.png">
    </div>
    <div class="large-9 small-9 columns">
      <p class="status-text">You skipped today</p>
      <p class="sub-status-text">Come on! You can do it.</p>
    </div>
  </div>
<% else %>
  <div class="row status">
    <div class="large-3 small-3 columns">
      <img src="assets/check.png">
    </div>
    <div class="large-9 small-9 columns">
      <p class="status-text">You flossed today! Go you!</p>
      <p class="sub-status-text">Done at <%= @floss_today.created_at.to_s(:reminder_time) %>!</p>
    </div>
  </div>
<% end %>
<% else %>
<div class="row status">
    <div class="large-3 small-3 columns">
      <img src="assets/alarm.png">
    </div>
    <div class="large-9 small-9 columns">
      <p class="status-text">You skipped today</p>
      <p class="sub-status-text">You haven't flossed yet. There's still time!</p>
    </div>
  </div>
<% end %>




