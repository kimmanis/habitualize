<div class="hero">
  <div class="row">
    <div class="large-2 small-4 columns">
    	<%= image_tag current_user.image, :class=>"profile-picture", :size=>"80x80" %>
      
    </div>
    <div class="large-6 small-8 end scolumns">
      <p class="name"><%= current_user.name %></p>
      <p>10 minutes: Warmup sequence </br>
          5 minutes: Paradiddles</br>
          5 minutes: Triple stroke rolls</br>
          5 minutes: Single flammed mill</br>
          5 minutes: Inverted flam tap</br>
          10 minutes: play along with Track 12</br>
      </p>
    </div>
  </div><br />
  <div class="row">
    <div class="large-12 columns">
      <p class="center"><a href="#" data-reveal-id="myModal" class="button checkin">Did you practice?</a></p>
    </div>
  </div>
</div>
  <br />

<!-- today -->
<% if @floss_today %>
<% if @floss_today.skipped %>
  <div class="row status">
    <div class="large-3 small-3 columns">
      <img src="assets/x.png">
    </div>
    <div class="large-9 small-9 columns">
      <p class="status-text">You skipped today</p>
      <p class="sub-status-text">Come on! You can do it.</p>
    </div>
  </div>
<% else %>
  <div class="row status">
    <div class="large-3 small-3 columns">
      <img src="assets/check.png">
    </div>
    <div class="large-9 small-9 columns">
